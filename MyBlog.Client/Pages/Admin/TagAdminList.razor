@page "/admin/tag-list"
@inject ITagAdminService TagAdminService
@attribute [StreamRendering]

<section>
    <h1>Tag List</h1>
    <article>
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    @* ListHeaderCodePlaceholder *@
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (tags == null)
                {
                    <tr>
                        <td colspan="3">Loading...</td>
                        @* LoadingCountCodePlaceholder *@
                    </tr>
                }
                else if (tags.Count == 0)
                {
                    <tr>
                        <td colspan="3">No tags found.</td>
                        @* ZeroCountCodePlaceholder *@
                    </tr>
                }
                else
                {
                    @foreach (var tag in tags)
                    {
                        <tr>
                            <td>@tag.Id</td>
                            <td>@tag.Name</td>
                            @* ListItemCodePlaceholder *@
                            <td>
                                <NavButton Href="@("/admin/tag-edit/" + tag.Id)" Name="Edit" />
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <NavButton Href="/admin/tag-edit" Name="Create" />
    </article>
</section>

@code {
    List<Tag>? tags = null;

    protected override async Task OnInitializedAsync()
    {
        tags = await TagAdminService.GetAllAsync();
    }
}
