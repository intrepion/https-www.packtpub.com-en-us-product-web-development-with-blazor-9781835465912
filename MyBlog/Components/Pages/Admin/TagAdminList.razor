@page "/admin/tag-list"
@inject ITagAdminService TagAdminService
@attribute [StreamRendering]

<section>
    <h1>Tag List</h1>
    <article>
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    @* ListHeadersCodePlaceholder *@
                    @* <th scope="col">PropertyNamePlaceholder</th> *@
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Tags == null)
                {
                    <tr>
                        @* <td colspan="CountPlaceHolder">Loading...</td> *@
                    </tr>
                }
                else if (Tags.Count == 0)
                {
                    <tr>
                        @* <td colspan="CountPlaceHolder">No HumanLowerTags found.</td> *@
                    </tr>
                }
                else
                {
                    @foreach (var tag in Tags)
                    {
                        <tr>
                            <td>@tag.Id</td>
                            @* <td>@tag.PropertyNamePlaceholder</td> *@
                            <td>
                                <NavButton Href="@("/admin/tag-edit/" + tag.Id)" Name="Edit" />
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <NavButton Href="/admin/tag-edit" Name="Create" />
    </article>
</section>

@code {
    List<Tag>? Tags = null;

    protected override async Task OnInitializedAsync()
    {
        Tags = await TagAdminService.GetAllAsync();
    }
}
