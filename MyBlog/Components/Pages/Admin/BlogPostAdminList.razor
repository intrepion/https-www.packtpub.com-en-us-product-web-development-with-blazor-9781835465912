@page "/admin/UrlNamePlaceholder-list"
@rendermode InteractiveServer
@inject AuthenticationStateProvider GetAuthenticationStateAsync
@inject IBlogPostAdminService BlogPostAdminService
@attribute [StreamRendering]

<section>
    <h1>HumanNamePlaceholder List</h1>
    <article>
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    @* ListHeaderCodePlaceholder *@
                    @* <th scope="col">Title</th>
                    <th scope="col">ToDoList</th> *@
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (TableLowercaseNamePlaceholder == null)
                {
                    <tr>
                        @* LoadingCountCodePlaceholder *@
                        @* <td colspan="4">Loading...</td> *@
                    </tr>
                }
                else if (TableLowercaseNamePlaceholder.Count == 0)
                {
                    <tr>
                        @* ZeroCountCodePlaceholder *@
                        @* <td colspan="4">No to do items found.</td> *@
                    </tr>
                }
                else
                {
                    @foreach (var blogPost in TableLowercaseNamePlaceholder)
                    {
                        <tr>
                            <td>@blogPost.Id</td>
                            @* ListItemCodePlaceholder *@
                            @* <td>@blogPost.Title</td>
                            <td>@blogPost.ToDoList?.Title</td> *@
                            <td>
                                <a href="@("/admin/UrlNamePlaceholder-edit/" + blogPost.Id)">Edit</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <a href="/admin/UrlNamePlaceholder-edit">Create</a>
    </article>
</section>

@code {
    List<BlogPost>? TableLowercaseNamePlaceholder = null;

    protected override async Task OnInitializedAsync()
    {
        var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
        var userName = authState.User.Identity?.Name;

        if (userName == null)
        {
            return;
        }

        TableLowercaseNamePlaceholder = await BlogPostAdminService.GetAllAsync(userName);
    }
}
