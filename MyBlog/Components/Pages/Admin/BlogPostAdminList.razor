@page "/admin/blog-post-list"
@inject IBlogPostAdminService BlogPostAdminService
@attribute [StreamRendering]

<section>
    <h1>Blog Post List</h1>
    <article>
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">PublishDate</th>
                    <th scope="col">Text</th>
                    <th scope="col">Title</th>
                    @* ListHeadersCodePlaceholder *@
                    @* <th scope="col">PropertyNamePlaceholder</th> *@
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (BlogPosts == null)
                {
                    <tr>
                        @* <td colspan="CountPlaceHolder">Loading...</td> *@
                    </tr>
                }
                else if (BlogPosts.Count == 0)
                {
                    <tr>
                        @* <td colspan="CountPlaceHolder">No HumanLowerBlogPosts found.</td> *@
                    </tr>
                }
                else
                {
                    @foreach (var blogPost in BlogPosts)
                    {
                        <tr>
                            <td>@blogPost.Id</td>
                            @* <td>@blogPost.PropertyNamePlaceholder</td> *@
                            <td>
                                <NavButton Href="@("/admin/blog-post-edit/" + blogPost.Id)" Name="Edit" />
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <NavButton Href="/admin/blog-post-edit" Name="Create" />
    </article>
</section>

@code {
    List<BlogPost>? BlogPosts = null;

    protected override async Task OnInitializedAsync()
    {
        BlogPosts = await BlogPostAdminService.GetAllAsync();
    }
}
