@page "/admin/category-list"
@inject ICategoryAdminService CategoryAdminService
@attribute [StreamRendering]

<section>
    <h1>Category List</h1>
    <article>
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    @* ListHeadersCodePlaceholder *@
                    @* <th scope="col">PropertyNamePlaceholder</th> *@
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Categories == null)
                {
                    <tr>
                        @* <td colspan="CountPlaceHolder">Loading...</td> *@
                    </tr>
                }
                else if (Categories.Count == 0)
                {
                    <tr>
                        @* <td colspan="CountPlaceHolder">No HumanLowerCategories found.</td> *@
                    </tr>
                }
                else
                {
                    @foreach (var category in Categories)
                    {
                        <tr>
                            <td>@category.Id</td>
                            @* <td>@category.PropertyNamePlaceholder</td> *@
                            <td>
                                <NavButton Href="@("/admin/category-edit/" + category.Id)" Name="Edit" />
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <NavButton Href="/admin/category-edit" Name="Create" />
    </article>
</section>

@code {
    List<Category>? Categories = null;

    protected override async Task OnInitializedAsync()
    {
        Categories = await CategoryAdminService.GetAllAsync();
    }
}
