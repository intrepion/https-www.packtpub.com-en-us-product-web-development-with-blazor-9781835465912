@page "/admin/comment-list"
@inject ICommentAdminService CommentAdminService
@attribute [StreamRendering]

<section>
    <h1>Comment List</h1>
    <article>
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    @* ListHeadersCodePlaceholder *@
                    @* <th scope="col">PropertyNamePlaceholder</th> *@
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Comments == null)
                {
                    <tr>
                        @* <td colspan="CountPlaceHolder">Loading...</td> *@
                    </tr>
                }
                else if (Comments.Count == 0)
                {
                    <tr>
                        @* <td colspan="CountPlaceHolder">No HumanLowerComments found.</td> *@
                    </tr>
                }
                else
                {
                    @foreach (var comment in Comments)
                    {
                        <tr>
                            <td>@comment.Id</td>
                            @* <td>@comment.PropertyNamePlaceholder</td> *@
                            <td>
                                <NavButton Href="@("/admin/comment-edit/" + comment.Id)" Name="Edit" />
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <NavButton Href="/admin/comment-edit" Name="Create" />
    </article>
</section>

@code {
    List<Comment>? Comments = null;

    protected override async Task OnInitializedAsync()
    {
        Comments = await CommentAdminService.GetAllAsync();
    }
}
