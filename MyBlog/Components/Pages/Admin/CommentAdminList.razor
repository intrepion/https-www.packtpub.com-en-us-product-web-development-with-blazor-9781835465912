@page "/admin/comment-list"
@inject ICommentAdminService CommentAdminService
@attribute [StreamRendering]

<section>
    <h1>Comment List</h1>
    <article>
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    @* ListHeaderCodePlaceholder *@
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (comments == null)
                {
                    <tr>
                        @* LoadingCountCodePlaceholder *@
                    </tr>
                }
                else if (comments.Count == 0)
                {
                    <tr>
                        @* ZeroCountCodePlaceholder *@
                    </tr>
                }
                else
                {
                    @foreach (var comment in comments)
                    {
                        <tr>
                            <td>@comment.Id</td>
                            @* ListItemCodePlaceholder *@
                            <td>
                                <NavButton Href="@("/admin/comment-edit/" + comment.Id)" Name="Edit" />
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <NavButton Href="/admin/comment-edit" Name="Create" />
    </article>
</section>

@code {
    List<Comment>? comments = null;

    protected override async Task OnInitializedAsync()
    {
        comments = await CommentAdminService.GetAllAsync();
    }
}
